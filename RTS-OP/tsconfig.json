{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": [
      "src/main/**/*"
    ],
    "exclude": [
      "node_modules",
      "src/renderer"
    ]
  }